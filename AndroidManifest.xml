<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.johnwayner.android.tichu.scorer" android:versionCode="1"
	android:versionName="1.0">
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name=".actions.CreateNewGame"
			android:label="@string/create_new_game_title">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".actions.ManagePlayers"
			android:label="@string/manage_players_title">
			<intent-filter>
				<action android:name="com.johnwayner.android.tichu.scorer.MANAGE_PLAYERS" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>		
	</application>


</manifest> 